{
  // Use latest pre-built image
  "image": "ghcr.io/radio-aktywne/devcontainers/app-liquidsoap:latest",
  // Run arguments
  "runArgs": [
    // Use host UTS namespace
    "--uts=host",
    // Use host IPC
    "--ipc=host",
    // Use host network
    "--network=host",
    // Use host user namespace
    "--userns=host",
    // Use host cgroup namespace
    "--cgroupns=host",
    // Run with elevated privileges
    "--privileged"
  ]
}
